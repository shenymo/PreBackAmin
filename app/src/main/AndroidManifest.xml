<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!--    请求通知权限-->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PreBackAmin"
        tools:targetApi="31">
        <activity
            android:name="com.xeasy.prebackanim.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:theme="@style/Theme.PreBackAmin.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <provider
            android:name=".provider.ConfigProvider"
            android:authorities="com.xeasy.prebackanim.provider.ConfigProvider"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.UpdateService"
            android:launchMode="singleInstance"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".service.QSTileService"
            android:label="调试返回动画"
            android:launchMode="singleTask"
            android:icon="@mipmap/img"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>

            <!-- 声明为主动更新磁贴（可选） -->
            <meta-data
                android:name="android.service.quicksettings.ACTIVE_TILE"
                android:value="true" />
        </service>


        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="强行开启预见性返回动画" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <!--        <meta-data-->
        <!--            android:name="xposedsharedprefs"-->
        <!--            android:value="true" />-->
        <meta-data
            android:name="xposedscope"
            android:resource="@array/module_scope" />

    </application>

</manifest>